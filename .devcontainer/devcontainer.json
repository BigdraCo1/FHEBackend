{
    "name": "FHE Backend",
    "image": "nixos/nix:latest",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "nix --extra-experimental-features 'nix-command flakes' develop --command bash -c 'cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build -j$(nproc)'",
    "customizations": {
        "vscode": {
            "settings": {
                "cmake.buildDirectory": "${workspaceFolder}/build",
                "cmake.configureArgs": [
                    "-DCMAKE_BUILD_TYPE=Debug"
                ],
                "editor.formatOnSave": true,
                "C_Cpp.default.cppStandard": "c++20",
                "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json"
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "xaver.clang-format",
                "jnoortheen.nix-ide"
            ]
        }
    },
    "forwardPorts": [
        5670
    ],
    "remoteUser": "root"
}